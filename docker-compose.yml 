version: '3.8'

services:
  course_db:
    image: postgres:latest
    env_file: "postgres.env"
    volumes:
      - pg_course:/var/lib/postgresql/data
    networks:
      course_net:
        aliases: [course_db]
   
  backend:
    build: ./backend
    env_file: "app.env"
    ports:
      - "8081:8081"
    networks:
      course_net:
        aliases: [backend]
    depends_on:
      - course_db

  frontend:
    build: ./frontend
    ports:
      - "3000:3000"
    networks:
      course_net:
        aliases: [frontend]
    depends_on:
      - backend

volumes:
  pg_course:
    driver: local
networks:
    course_net:
        name:course_net 